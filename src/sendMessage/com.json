{
  "title": "腾讯云 Chat 发送消息",
  "namespace": "mybricks.tencentcloudChat.sendMessage",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "description": "腾讯云 Chat 发送消息",
  "icon": "./icon.svg",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "runtime": "./runtime.tsx",
  "rtType": "js",
  "inputs": [
    {
      "id": "call",
      "title": "发送",
      "schema": {
        "type": "object",
        "properties": {
          "type": {
            "title": "消息类型",
            "type": "string"
          },
          "to": {
            "title": "userID",
            "type": "string"
          },
          "text": {
            "title": "文本",
            "description": "如果是文本消息（text），则必填",
            "type": "string"
          }
        }
      }
    }
  ],
  "outputs": [
    {
      "id": "onSuccess",
      "title": "消息发送成功",
      "description": "消息发送成功",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onFail",
      "title": "消息发送失败",
      "description": "消息发送失败",
      "schema": {
        "type": "any"
      }
    }
  ]
}
